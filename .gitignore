# Ignore non-hidden files & directories
/[^.]**

# XDG local directories don't generally contain config files.
/.local/
!/.local/bin

# Custom files and folders used to allow local configuration.
.*[._]local

# Too sensitive to version.
/.ssh/*
!/.ssh/config**
/.pki/

# Should be tracked separately.
.vscode/
.vim/
.config/nvim/
.config/yadm/local/

# Ephemeral
.*cache*
.*history*
.viminfo
.lesshst
.tmp/
.zsh/cache/
.zsh/completion/*
.zsh/.zcompdump*
.zsh/.zcompdumps/
.zcompdumps/

# OS-specific
.bashrc
.bash_logout
.bash_profile
.profile

# Exceptions
!/**/.gitkeep
